<h1>Available Flights</h1>

<% if @flights.any? %>
  <% @flights.each do |flight| %>
    <h3><%= flight.departure_airport.name %> to <%= flight.arrival_airport.name %></h3>
    <p><%= flight.start_datetime.strftime('%m/%d/%Y %I:%M %p') %></p>
    <p><%= flights.passengers_num %> passengers</p>

    <%= link_to 'Book this flight', new_booking_path(flight_id: flight.id, passengers: @passengers), class: 'button' %>
  <% end %>
<% else %>
  <p>No flights found for selected criteria</p>
<% end %>