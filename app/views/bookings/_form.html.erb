<h1>Book Flight</h1>

<%= form_with(model: @booking, method: 'post') do |form| %>
  <div class="form-group">
    <%= form.label :flight_id %>
    <%= form.text_field :flight_id, value: params[:flight_id], class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>
  <%= form.hidden_field :passengers_count, value: params[:booking][:passenger_count]%>
  <div class="actions">
    <%= form.submit 'Confirm Booking', class: 'btn btn-primary' %>
  </div>
<% end %>




